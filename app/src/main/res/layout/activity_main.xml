<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:padding="15dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <EditText
            android:layout_width="match_parent"
            android:textColorHint="@color/black"
            android:layout_height="wrap_content"
                android:padding="10dp"
                android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:background="@drawable/option_item_bg"
            android:drawableLeft="@drawable/searchnew"

            android:hint="Search Store"
            android:minHeight="48dp" />

        <ImageView
            android:id="@+id/imageView2"

            android:src="@drawable/grocery"
            android:background="@drawable/card_background"
            android:layout_width="match_parent"
            android:scaleType="fitXY"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/textView2"
            android:layout_marginTop="5dp"
            android:textSize="22sp"
            android:textStyle="bold"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Exclusive Offer" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/exclusiveRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="5dp" />

            <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:text="Groceries"
            android:textStyle="bold"
            android:textSize="22sp"
            style="@style/TextAppearance.AppCompat.Title"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/groRecycler"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="match_parent" />

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/groceriesRecyclerView"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.AppCompat.Title"
            android:textStyle="bold"
            android:textSize="22sp"
            android:layout_marginTop="5dp"
            android:text="Best Selling"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:id="@+id/bestSellingRecyclerView"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content" />

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>